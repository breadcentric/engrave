extends website.pug

append scripts
  script(src="/js/parsley.min.js")
  script(src="/js/configure.js")

block body
  .content
    .container-fluid
      .row
        .col-md-6
          .card
            .card-header
              h4.card-title Your blog is almost ready
              span We just need few more informations
              hr
            .card-body
              form#configure
                .row
                  .col-md-6
                    .form-group
                      
                      if blogger.tier == 15
                        //- label Add your domain
                        p Please leave comment in this topic:

                        a(href='https://steemit.com/pl-projekty/@nicniezgrublem/engrave-pierwsza-platforma-blogowa-oparta-na-sieci-steem') ENAGRAVE at Steemit.com
                      
                      else if blogger.tier == 12
                        label Information
                        p Due to alpha release, we do not own DNS server yet, so you have to point your domain directly to our server. Use your registrar's DNS servers and change <strong>A</strong> record to <strong>23.92.24.30</strong>.
                        label Domain
                        input.form-control(name='domain', pattern="^[a-zA-Z0-9][a-zA-Z0-9-_]+\.[a-zA-Z]{2,11}?$", type='text', placeholder='example.com', value='' parsley-trigger="change" required)
                      
                      else
                        //^[a-zA-Z0-9][a-zA-Z0-9-_]+\.[a-zA-Z]{2,11}?$
                        label Blog address
                        input.form-control(name='subdomain', pattern="^[a-zA-Z0-9][a-zA-Z0-9-_]{2,24}?$", title="You cant use whitespaces in blog address", type='text', placeholder='Domain', value= blogger.steem_username)
                  
                  .col-md-6
                    .form-group
                      if blogger.tier == 10
                        label Domain
                        select.form-control(name="domain")
                          each domain in config.blog_domains
                            option(value=domain )= "." + domain

                a(href='/authorize/tier/cancel').btn.btn-link Change your tier
                if blogger.tier != 15
                  button.btn.btn-success.btn-fill.pull-right#finish-button(type='submit') Finish configuration
                .clearfix
