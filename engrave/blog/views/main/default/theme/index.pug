extends website

append scripts
    script(src="/js/main.js")

block content
    meta(name="description", content= config.opengraph_default_description)
    include partials/featured.pug
    if latest
        .posts-block.standard-box
            .title-section
                h1= translation.frontpage.new_articles
            .row#posts
                if latest.length == 0
                    .news-post.standart-post
                        h3= translation.frontpage.category_no_posts_found
                else
                    each item in latest
                        include partials/box.pug
        
            if latest.length
                .center-button
                    a(href="#").load-more= translation.frontpage.loadmore_text