html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title= page_title
    link(href='/clean-blog/vendor/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='/clean-blog/vendor/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel='stylesheet', type='text/css')
    link(href='/clean-blog/css/clean-blog.css', rel='stylesheet')
  
    include partials/opengraph.pug

    block scripts
      script(src='/clean-blog/vendor/jquery/jquery.min.js')
      script(src='/clean-blog/vendor/bootstrap/js/bootstrap.bundle.min.js')
      script(src='/clean-blog/js/clean-blog.min.js')


  body
    include partials/navigation.pug
    
    block header

    block content
    
    
    hr
    // Footer
    footer
      .container
        .row
          .col-lg-8.col-md-10.mx-auto
            ul.list-inline.text-center
              if config.twitter_url
                li.list-inline-item
                  a(href= twitter_url)
                    span.fa-stack.fa-lg
                      i.fa.fa-circle.fa-stack-2x
                      i.fa.fa-twitter.fa-stack-1x.fa-inverse
              if config.facebook_url
                li.list-inline-item
                  a(href=facebook_url)
                    span.fa-stack.fa-lg
                      i.fa.fa-circle.fa-stack-2x
                      i.fa.fa-facebook.fa-stack-1x.fa-inverse
              if config.instagram_url
                li.list-inline-item
                  a(href=instagram_url)
                    span.fa-stack.fa-lg
                      i.fa.fa-circle.fa-stack-2x
                      i.fa.fa-instagram.fa-stack-1x.fa-inverse

            p.copyright.text-muted Copyright Â© #{config.blog_title} 2018. #{translation.frontpage.powered_by}&nbsp;
                a(href="https://engrave.website") ENGRAVE

