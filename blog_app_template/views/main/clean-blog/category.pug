extends website

block header
    header.masthead(style="background-image: url('/clean-blog/img/home-bg.jpg')")
        .overlay
        .container
            .row
                .col-lg-8.col-md-10.mx-auto
                    .site-heading
                        h1= category_fullname

block content
    .container
        .row
            .col-lg-8.col-md-10.mx-auto
                if latest.length == 0
                    p= translation.frontpage.category_no_posts_found
                else
                    each item in latest
                        include partials/box.pug